@model IEnumerable<MenuItem>
    @{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br /><br />

    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Menu Item List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Any())
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    @Html.DisplayNameFor(c => c.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.CategoryId)
                </th>
                <th>
                    @Html.DisplayNameFor(c => c.SubCategoryId)
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(c => item.Name)
            </td>
            <td>
                @Html.DisplayFor(c => item.Price)
            </td>
            <td>
                @Html.DisplayFor(c => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(c => item.SubCategory.Name)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
            }
        </table>
    }
    else
    {
        <p>There are no Menu Items at this time.</p>
    }
    </div>

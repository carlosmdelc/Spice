@model IEnumerable<SubCategory>
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br /><br />

    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Sub Category List</h2>
            </div>
            <div class="col-6 text-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Any())
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(c => c.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(c => c.Category.Name)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(c => category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(c => category.Category.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="category.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>There are no Sub Categories at this time.</p>
        }
    </div>
